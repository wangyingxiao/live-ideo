   width: 0rpx; 
    height:0rpx; 
   margin: 0;  
   padding: 0;  
   border-radius: 0;  
   position:absolute;  
   background: rgba(0, 155, 0, 0.5); 
    top: 0;}
 .vv {  
   width: 200rpx;  
   height: 100rpx;  
  
    position: fixed;
    bottom:0;
    left:20%;
     }

